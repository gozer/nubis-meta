{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Outputs": {
    "InstanceProfileName": {
      "Description": "The Name of the instance profile",
      "Value": {
        "Ref": "PackerInstanceProfile"
      }
    },
    "packerAccessKey": {
      "Value": {
        "Ref": "packerAccessKey"
      }
    },
    "packerSecretKey": {
      "Value": {
        "Fn::GetAtt": [
          "packerAccessKey",
          "SecretAccessKey"
        ]
      }
    },
    "ConsulZoneID": {
      "Value": {
        "Ref": "ConsulZone"
      }
    },
    "CIZoneID": {
      "Value": {
        "Ref": "CIZone"
      }
    },
    "BaseZoneID": {
      "Value": {
        "Ref": "BaseZone"
      }
    }
  },
  "Resources": {
    "PackerS3Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "AccessControl": "PublicRead",
        "BucketName": "nubisproject-amis"
      }
    },
    "CIS3Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "AccessControl": "PublicRead",
        "BucketName": "nubisproject-ci"
      }
    },
    "ConsulZone": {
      "Type": "AWS::Route53::HostedZone",
      "Properties": {
        "HostedZoneConfig": {
          "Comment": "Zone for Consul Discovery"
        },
        "Name": "consul.sandbox.nubis.allizom.org"
      }
    },
    "CIZone": {
      "Type": "AWS::Route53::HostedZone",
      "Properties": {
        "HostedZoneConfig": {
          "Comment": "Zone for Consul CI Project"
        },
        "Name": "ci.sandbox.nubis.allizom.org"
      }
    },
    "BaseZone": {
      "Type": "AWS::Route53::HostedZone",
      "Properties": {
        "HostedZoneConfig": {
          "Comment": "Zone for Base CI Project"
        },
        "Name": "base.sandbox.nubis.allizom.org"
      }
    },
    "packerbucketpolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "PolicyDocument": {
          "Id": "PackerAIMBucketPolicy",
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "AllAccess",
              "Action": [
                "s3:*"
              ],
              "Effect": "Allow",
              "Resource": {
                "Fn::Join": [
                  "",
                  [
                    "arn:aws:s3:::",
                    {
                      "Ref": "PackerS3Bucket"
                    },
                    "/*"
                  ]
                ]
              },
              "Principal": {
                "AWS": {
                  "Fn::GetAtt": [
                    "packer",
                    "Arn"
                  ]
                }
              }
            }
          ]
        },
        "Bucket": {
          "Ref": "PackerS3Bucket"
        }
      }
    },
    "packer": {
      "Type": "AWS::IAM::User",
      "Properties": {
        "Path": "/",
        "Policies": [
          {
            "PolicyName": "PackerAdministrator",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": "*",
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },
    "packerAccessKey": {
      "Type": "AWS::IAM::AccessKey",
      "Properties": {
        "UserName": {
          "Ref": "packer"
        }
      }
    },
    "PackerRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "ec2.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Path": "/"
      }
    },
    "RolePolicies": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "packer",
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "sts:DecodeAuthorizationMessage",
                "iam:PassRole",
                "ec2:AttachVolume",
                "ec2:CreateVolume",
                "ec2:CopyImage",
                "ec2:DeleteVolume",
                "ec2:CreateKeypair",
                "ec2:DeleteKeypair",
                "ec2:CreateSecurityGroup",
                "ec2:DeleteSecurityGroup",
                "ec2:AuthorizeSecurityGroupIngress",
                "ec2:CreateImage",
                "ec2:RunInstances",
                "ec2:TerminateInstances",
                "ec2:StopInstances",
                "ec2:DescribeVolumes",
                "ec2:DetachVolume",
                "ec2:DescribeInstances",
                "ec2:CreateSnapshot",
                "ec2:DeleteSnapshot",
                "ec2:DescribeSnapshots",
                "ec2:DescribeImages",
                "ec2:RegisterImage",
                "ec2:CreateTags",
                "ec2:ModifyImageAttribute"
              ],
              "Resource": "*"
            }
          ]
        },
        "Roles": [
          {
            "Ref": "PackerRole"
          }
        ]
      }
    },
    "CIRolePolicies": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "nubis-ci",
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "s3:*"
              ],
              "Resource": {
                "Fn::Join": [
                  "",
                  [
                    "arn:aws:s3:::",
                    {
                      "Ref": "CIS3Bucket"
                    },
                    "/*"
                  ]
                ]
              }
            }
          ]
        },
        "Roles": [
          {
            "Ref": "PackerRole"
          }
        ]
      }
    },
    "PackerInstanceProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "Path": "/",
        "Roles": [
          {
            "Ref": "PackerRole"
          }
        ]
      }
    }
  }
}
